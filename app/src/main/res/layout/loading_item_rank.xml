<?xml version="1.0" encoding="utf-8"?>

<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true"
    app:shimmer_colored="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
               android:layout_width="40dp"
            android:layout_height="24sp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:shapeAppearanceOverlay="@style/Theme.ERBSStats.ShapeAppearanceOverlayShimmerAll"
            style="@style/Theme.ERBSStats.Loading" />

        <com.google.android.material.imageview.ShapeableImageView
            style="@style/Theme.ERBSStats.Loading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/Theme.ERBSStats.ShapeAppearanceOverlayShimmerSmallImage"
            android:contentDescription="loading rank image"
            />

        <com.google.android.material.imageview.ShapeableImageView
            style="@style/Theme.ERBSStats.Loading"
            android:layout_width="180dp"
            android:layout_height="24sp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:shapeAppearanceOverlay="@style/Theme.ERBSStats.ShapeAppearanceOverlayShimmerAll"
            />

        <com.google.android.material.imageview.ShapeableImageView
            style="@style/Theme.ERBSStats.Loading"
            android:layout_width="70dp"
            android:layout_height="24sp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:shapeAppearanceOverlay="@style/Theme.ERBSStats.ShapeAppearanceOverlayShimmerAll"
            />

    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
