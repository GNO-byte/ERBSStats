<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        style="@style/Theme.ERBSStats.SmallImage"
        android:id="@+id/character_guide_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="character guide image"
        app:shapeAppearanceOverlay="@style/Theme.ERBSStats.ShapeAppearanceOverlaySmallImage"

        android:visibility="gone"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        app:shimmer_colored="false">

        <com.google.android.material.imageview.ShapeableImageView
            style="@style/Theme.ERBSStats.Loading"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
             app:shapeAppearanceOverlay="@style/Theme.ERBSStats.ShapeAppearanceOverlayShimmerSmallImage" />

    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>