<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="searchViewStyle" format="reference" />
    <attr name="textColorPrimary" format="reference" />

    <!-- Base application theme. -->
    <style name="Theme.ERBSStats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bunker</item>
        <item name="colorPrimaryVariant">@color/bunker</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:colorBackground">@color/eerie_black</item>
        <!--        <item name="android:background">@color/eerie_black</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/goldenrod</item>

        <item name="android:textColorSecondary">@color/white</item>
        <!--        <item name="android:textColorHint">@color/goldenrod</item>-->

        <item name="colorSurface">@color/bunker</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/goldenrod</item>
        <item name="colorSecondaryVariant">@color/goldenrod</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="tabStyle">@style/TabLayout.ERBSStats</item>


        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar</item>

        <item name="android:textColorHint">@color/grey_400</item>

        <item name="materialCardViewStyle">@style/Theme.ERBSStats.CardView</item>

        <item name="android:textViewStyle">@style/Theme.ERBSStats.textViewStyle</item>

    </style>


    <style name="Theme.ERBSStats.SplashScreen" parent="Theme.ERBSStats">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TabLayout.ERBSStats" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabTextColor">@color/erbs_tabs_icon_color_selector</item>
    </style>

    <style name="Theme.ERBSStats.textViewStyle" parent="Widget.AppCompat.TextView" >
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Theme.ERBSStats.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.ERBSStats.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ERBSStats.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ERBSStats.ThemeOverlayTopBorder">
        <item name="android:background">@drawable/rounded_top_border</item>
    </style>

    <style name="Theme.ERBSStats.ThemeOverlayBottomBorder">
        <item name="android:background">@drawable/rounded_bottom_border</item>
    </style>

    <style name="Theme.ERBSStats.ThemeOverlaySearchBorder">
        <item name="android:background">@drawable/rounded_search_border</item>
    </style>

    <style name="Theme.ERBSStats.ThemeOverlayLineFomTwoSides">
        <item name="android:background">@drawable/line_from_two_sides</item>
    </style>

    <style name="Theme.ERBSStats.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/goldenrod</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="Theme.ERBSStats.Logo">
        <item name="android:background">@color/white</item>
        <item name="android:src">@drawable/logo_black</item>
    </style>


    <style name="Theme.ERBSStats.MiniImage">
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@color/goldenrod</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.ERBSStats.SmallImage">
        <item name="strokeColor">@color/goldenrod</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="Theme.ERBSStats.ItemTeamMode">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/goldenrod</item>
    </style>

    <!--    ///////////////////-->

    <style name="Theme.ERBSStats.Loading">
        <item name="android:background">@color/goldenrod</item>
    </style>

    <!--    android:layout_height="24sp"-->
    <style name="Theme.ERBSStats.Loading.Text">
        <item name="android:layout_height">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>

    </style>

    <!--    ///////////////////-->

    <style name="Theme.ERBSStats.ShapeAppearanceOverlay"/>

    <style name="Theme.ERBSStats.ShapeAppearanceOverlay.SmallImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.ERBSStats.ShapeAppearanceOverlay.Shimmer"/>

    <style name="Theme.ERBSStats.ShapeAppearanceOverlay.Shimmer.All">
        <item name="cornerSize">20%</item>
    </style>

    <style name="Theme.ERBSStats.ShapeAppearanceOverlay.Shimmer.Text" parent="Theme.ERBSStats.ShapeAppearanceOverlay.SmallImage" />

    <style name="Theme.ERBSStats.ShapeAppearanceOverlay.Shimmer.SmallImage" parent="Theme.ERBSStats.ShapeAppearanceOverlay.SmallImage" />

    <!--    ///////////////////-->

    <style name="Theme.ERBSStats.TextAppearance"/>

    <style name="Theme.ERBSStats.TextAppearance.Middle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ERBSStats.TextAppearance.Middle.Alternative"  >
        <item name="android:textColor">@color/goldenrod</item>
    </style>

    <style name="Theme.ERBSStats.TextAppearance.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>